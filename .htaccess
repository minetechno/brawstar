# Enable rewrite engine
RewriteEngine On

# Set default charset
AddDefaultCharset UTF-8

# Prevent directory listing
Options -Indexes

# Custom error pages (opcional)
ErrorDocument 404 /brawstar/index.php
ErrorDocument 500 /brawstar/index.php

# Allow access to specific files
<FilesMatch "\.(php|html|css|js|png|jpg|jpeg|gif|svg|ico)$">
    Require all granted
</FilesMatch>
